          <%= link_to 'Rides', rides_path, :class => 'nav-link' %>
      </li>
      <li class="nav-item">
          <%= link_to 'Organizations', organizations_path, :class => 'nav-link' %>
      </li>
      <li class="nav-item">
          <%= link_to 'Tokens', tokens_path, :class => 'nav-link' %>
      </li>


    </ul>
    <div><% if organization_signed_in? %>
      Logged in as <strong><%= current_organization.email %></strong>.
      <%= link_to 'Edit profile', edit_organization_registration_path, :class => 'navbar-link' %> |
      <%= link_to "Logout", destroy_organization_session_path, method: :delete, :class => 'navbar-link'  %>
    <% else %>
      <%= link_to "Sign up", new_organization_registration_path, :class => 'navbar-link'  %> |
      <%= link_to "Login", new_organization_session_path, :class => 'navbar-link'  %>
    <% end %>
    </div>
  </div>
</nav>

