
<h1>Listing Riders</h1>

<%= link_to 'New Rider', new_rider_path %>
<table>
  <tr>
    <th>ID</th>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Phone</th>
    <th>Email</th>
<!--    <th>Tokens</th>-->
    <th></th>
  </tr>

  <% @riders.each do |rider| %>
    <tr>
      <td><%= rider.id %></td>
      <td><%= rider.first_name %></td>
      <td><%= rider.last_name %></td>
      <td><%= rider.phone %></td>
      <td><%= rider.email %></td>
<!--      <td><%#= rider.tokens %></td>-->
      <td><%= link_to 'Show', rider_path(rider) %></td>
      <td><%= link_to 'Edit', edit_rider_path(rider) %></td>
      <td><%= link_to 'Destroy', rider_path(rider),
                      method: :delete,
                      data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Back', welcome_index_path %>
